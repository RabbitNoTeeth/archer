<idea-plugin>
    <id>fun.bookish.plugin.archer</id>
    <name>Archer</name>
    <vendor email="864426487@qq.com" url="http://blog.bookish.fun">Xinda</vendor>

    <description>代码生成器</description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="fun.bookish.plugin.archer.actions.GroupedActions" text="Archer代码生成" popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <action class="fun.bookish.plugin.archer.actions.AllGenAction"
                    id="fun.bookish.plugin.archer.actions.AllGenAction"
                    text="快速一键生成"
                    description="快速一键生成">
            </action>
            <action class="fun.bookish.plugin.archer.actions.POMapperGenAction"
                    id="fun.bookish.plugin.archer.actions.POMapperGenAction"
                    text="1. POMapper"
                    description="1. POMapper">
            </action>
            <action class="fun.bookish.plugin.archer.actions.POMapperXmlGenAction"
                    id="fun.bookish.plugin.archer.actions.POMapperXmlGenAction"
                    text="2. POMapperXml"
                    description="2. POMapperXml">
            </action>
            <action class="fun.bookish.plugin.archer.actions.POPersisterGenAction"
                    id="fun.bookish.plugin.archer.actions.POPersisterGenAction"
                    text="3. POPersister"
                    description="3. POPersister">
            </action>
            <action class="fun.bookish.plugin.archer.actions.VOGenAction"
                    id="fun.bookish.plugin.archer.actions.VOGenAction"
                    text="4. VO"
                    description="4. VO">
            </action>
            <action class="fun.bookish.plugin.archer.actions.ServiceGenAction"
                    id="fun.bookish.plugin.archer.actions.ServiceGenAction"
                    text="5. Service"
                    description="5. Service">
            </action>
            <action class="fun.bookish.plugin.archer.actions.ServiceImplGenAction"
                    id="fun.bookish.plugin.archer.actions.ServiceImplGenAction"
                    text="6. ServiceImpl"
                    description="6. ServiceImpl">
            </action>
            <action class="fun.bookish.plugin.archer.actions.ControllerGenAction"
                    id="fun.bookish.plugin.archer.actions.ControllerGenAction"
                    text="7. Controller"
                    description="7. Controller">
            </action>
        </group>
    </actions>
</idea-plugin>